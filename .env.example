#================================================================
# Telegram & OpenAI Configuration
#================================================================

# Telegram Bot Token from @BotFather
TELEGRAM_TOKEN=

# OpenAI API Key for transcription and summarization
OPENAI_API_KEY=

#================================================================
# Notion General Configuration
#================================================================

# Notion Integration Token from https://www.notion.so/my-integrations
NOTION_TOKEN=

#================================================================
# Notion Database IDs
#================================================================

NOTION_DATABASE_ID_IDEA=
NOTION_DATABASE_ID_TASK=
NOTION_DATABASE_ID_LINK=

#================================================================
# Notion Property Names Configuration (Optional, defaults are used if not set)
#================================================================

# --- Properties for the "Ideas" Database ---
NOTION_IDEA_PROPERTY_TITLE=Name

# --- Properties for the "Tasks" Database ---
NOTION_TASK_PROPERTY_TITLE=Name
# A comma-separated list of 'Select' or 'Multi-select' properties you want the bot to ask about interactively.
# The bot will ask about them in the order they are listed here.
# Example: NOTION_TASK_INTERACTIVE_PROPERTIES=Тип,Важность,Срочность
NOTION_TASK_INTERACTIVE_PROPERTIES=

# --- Properties for the "Links" Database ---
NOTION_LINK_PROPERTY_TITLE=Name
NOTION_LINK_PROPERTY_URL=URL
NOTION_LINK_PROPERTY_TAGS=Tags
